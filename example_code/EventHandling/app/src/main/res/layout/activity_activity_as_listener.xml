<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tmd.eventhandling.activityAsListener"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:layout_weight="0.20">

        <Button
            android:id="@+id/btnShortClick"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="push to hide" />

        <Button
            android:id="@+id/btnLongClick"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="push and hold to hide" />
    </LinearLayout>

    <Button
        android:id="@+id/btnShowButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="push to show all button" />
</LinearLayout>
