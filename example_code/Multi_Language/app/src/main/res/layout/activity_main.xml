<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.tmd.multi_language.MainActivity">


    <TextView
        android:id="@+id/text_view_spring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spring"
        android:textColor="@android:color/black"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/text_view_summer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/summer"
        android:textColor="@android:color/black"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/text_view_autumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autumn"
        android:textColor="@android:color/black"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/text_view_winter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/winter"
        android:textColor="@android:color/black"
        android:textSize="30sp"/>
</LinearLayout>
